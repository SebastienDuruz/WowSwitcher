<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="WowClientSwitcher.MainWindow"
        SizeToContent="WidthAndHeight" Topmost="True" CanResize="False" SystemDecorations="None"
        PointerPressed="InputElement_OnPointerPressed"
        Title="Wow Client Switcher">
        <StackPanel x:Name="clientsGrid">
                <Grid ColumnDefinitions="Auto,Auto" RowDefinitions="Auto">
                        <Label Grid.Column="0" Grid.Row="0">Wow Client Switcher</Label>
                        <Button Grid.Column="1" Grid.Row="0" Padding="2" Click="Button_OnClick">X</Button>
                </Grid>
        </StackPanel>
</Window>
